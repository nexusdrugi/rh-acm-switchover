# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf diff=python

# Shell scripts
*.sh text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# YAML and configuration
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.cfg text eol=lf
*.ini text eol=lf

# Images (binary)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary

# Archives (binary)
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.bz2 binary

# Exclude files from exports
.gitattributes export-ignore
.gitignore export-ignore
.editorconfig export-ignore
.github/ export-ignore
tests/ export-ignore
*.pyc export-ignore
__pycache__/ export-ignore
.state/ export-ignore
